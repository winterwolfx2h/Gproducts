package com.Bcm.BCMDrools;

import com.Bcm.Model.Product.ProductOfferingDTO;
import com.Bcm.Exception.ProductOfferingValidationException;

rule "Validate Effective Dates"
    when
        $dto: ProductOfferingDTO(effectiveFrom > effectiveTo)
    then
        throw new ProductOfferingValidationException("Invalid effective dates: 'effectiveTo' is earlier than 'effectiveFrom'.");
end